{
  "name": "mottus-server",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json ",
    "migrate": "prisma migrate dev --name init --preview-feature",
    "migrate:prod": "prisma migrate deploy --preview-feature",
    "cov:clean": "rimraf ./coverage",
    "cov:unit": "jest --coverage",
    "cov:e2e": "jest --config ./test/jest-e2e.json ",
    "cov:merge": "ts-node --pretty merge.ts",
    "coverage": "yarn cov:clean && yarn cov:unit && yarn cov:e2e && yarn cov:merge"
  },
  "dependencies": {
    "@nestjs/common": "^7.5.1",
    "@nestjs/core": "^7.5.1",
    "@nestjs/graphql": "^7.9.4",
    "@nestjs/platform-express": "^7.5.1",
    "@prisma/client": "^2.14.0",
    "@quixo3/prisma-session-store": "^1.1.2",
    "apollo-server-express": "^2.19.1",
    "bcryptjs": "^2.4.3",
    "dataloader": "^2.0.0",
    "express-session": "^1.17.1",
    "graphql": "^15.4.0",
    "graphql-tools": "^7.0.2",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^6.6.3",
    "validator": "^13.5.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@golevelup/ts-jest": "^0.3.1",
    "@nestjs/cli": "^7.5.1",
    "@nestjs/schematics": "^7.1.3",
    "@nestjs/testing": "^7.5.1",
    "@prisma/cli": "^2.14.0",
    "@types/bcryptjs": "^2.4.2",
    "@types/express": "^4.17.8",
    "@types/express-session": "1.15.16",
    "@types/fs-extra": "^9.0.6",
    "@types/jest": "^26.0.15",
    "@types/node": "^14.14.20",
    "@types/supertest": "^2.0.10",
    "@types/validator": "^13.1.3",
    "@typescript-eslint/eslint-plugin": "^4.6.1",
    "@typescript-eslint/parser": "^4.6.1",
    "chalk": "^4.1.0",
    "cz-conventional-changelog": "3.3.0",
    "dotenv": "^8.2.0",
    "eslint": "^7.12.1",
    "eslint-config-prettier": "7.0.0",
    "eslint-plugin-prettier": "^3.1.4",
    "fs-extra": "^9.0.1",
    "husky": "^4.3.7",
    "istanbul-lib-coverage": "^3.0.0",
    "istanbul-lib-report": "^3.0.0",
    "istanbul-reports": "^3.0.2",
    "jest": "^26.6.3",
    "jest-environment-node": "^26.6.2",
    "nanoid": "^3.1.20",
    "prettier": "^2.1.2",
    "supertest": "^6.0.0",
    "ts-jest": "^26.4.3",
    "ts-loader": "^8.0.8",
    "ts-node": "^9.1.1",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.1.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "moduleNameMapper": {
      "^src/(.*)$": "<rootDir>/$1"
    },
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coveragePathIgnorePatterns": [
      ".module.ts$",
      ".spec.ts$",
      ".entity.ts$",
      ".dto.ts$",
      "./src/main.ts"
    ],
    "coverageDirectory": "../coverage/unit",
    "testEnvironment": "node"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true"
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
