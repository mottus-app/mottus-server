// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum Role {
  ADVERTISER
  USER
}

model Organization {
  id         String     @id @default(uuid())
  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @updatedAt
  name       String     @unique
  companyPic String?
  worker     User[]
  campaign   Campaign[]
}

model Session {
  id      String   @id
  sid     String   @unique
  data    String
  expires DateTime
}

model User {
  id           String         @id @default(uuid())
  createdAt    DateTime       @default(now())
  updatedAt    DateTime       @updatedAt
  name         String
  profilePic   String?
  email        String         @unique
  password     String
  role         Role
  organization Organization[]
  campaings    Campaign[]
}

model Campaign {
  id             String        @id @default(uuid())
  createdAt      DateTime      @default(now())
  updatedAt      DateTime      @updatedAt
  organization   Organization? @relation(fields: [organizationId], references: [id])
  organizationId String?
  owners         User[]
}

enum ContentType {
  IMAGE
  VIDEO
}

model Content {
  id          String      @id @default(uuid())
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  contentType ContentType
  views       Views[]
  title       String
  slug        String      @unique
}

enum Gender {
  MALE
  FEMALE
  OTHER
}

model Views {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  age       Int
  gender    Gender
  content   Content  @relation(fields: [contentId], references: [id])
  contentId String
}
